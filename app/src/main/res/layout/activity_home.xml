<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Barra superior con soporte para menú -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3C132F"
            android:title="Menú Principal"
            android:titleTextColor="@android:color/white"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título de bienvenida -->
            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"/>

            <!-- Contenedor de botones en formato de cuadrícula -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:paddingTop="16dp">

                <Button
                    android:id="@+id/btnIrPerfil"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"
                    android:text="Perfil"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnAbrirWeb"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_airline_stops_24"
                    android:text="Sitio Web"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnEnviarCorreo"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_attach_email_24"
                    android:text="Correo"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnCompartir"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_convert_to_text_24"
                    android:text="Compartir"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnLinterna"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_backlight_high_24"
                    android:text="Linterna"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnCamara"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_camera_24"
                    android:text="Cámara"
                    android:textColor="@color/text_main" />

                <Button
                    android:id="@+id/btnWifi"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="4dp"
                    android:drawableTop="@drawable/outline_android_wifi_3_bar_24"
                    android:text="WiFi"
                    android:textColor="@color/text_main" />

            </GridLayout>

            <ImageView
                android:id="@+id/imgGaleria"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Imagen seleccionada de la galería" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>